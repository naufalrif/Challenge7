<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:id="@+id/cardfilmfav"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginRight="10dp"
            android:id="@+id/img_film_fav"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_film_fav"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_judulfilmfav"

                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="Judul Film"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tanggalfilmfav"
                android:layout_below="@id/tv_judulfilmfav"
                android:textSize="15sp"
                android:text="Tanggal Film"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sutradarafilmfav"
                android:layout_below="@id/tv_tanggalfilmfav"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Sutradara"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_delete_24"
                android:id="@+id/btn_deletefav"
                android:layout_below="@id/tv_tanggalfilmfav"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>