<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:id="@+id/cardfilm"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginRight="10dp"
            android:id="@+id/img_film"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_film"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_judulfilm"

                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="Judul Film"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_tanggalfilm"
                android:layout_below="@id/tv_judulfilm"
                android:textSize="15sp"
                android:text="Tanggal Film"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sutradarafilm"
                android:layout_below="@id/tv_tanggalfilm"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Sutradara"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>